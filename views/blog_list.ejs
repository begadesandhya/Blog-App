                  <th>language</th>
                  <th>Category</th>
                  <th>Created</th>
                  <th>Modified</th>
                  <th>Status</th>
                  <th>Action</th>
                </tr>
                </thead>
                <tbody>
                  <% for(var i=0; i<allblog.length; i++) { %> 

                <tr>
                  <td><%= allblog[i].title%></td>
                  <td><%= allblog[i].author%></td>
                  <% if(allblog[i].blogLanguage == 1){ %> 
                  <td>English</td>
                  <% }else{ %> 
                    <td>Chinese</td>
                    <% } %> 
                  <td><%= allblog[i].category.categoryName%></td>
                 
                  <td><%= new Date(allblog[i].createdAt).toDateString();%> </td>
                  <td><%= new Date(allblog[i].updatedAt).toDateString();%></td>
                  <% if(allblog[i].blogStatus == 1){ %> 
                  <td>
                    <a data-id=<%= allblog[i]._id%> class="btn bg-gradient-success save" data-toggle="modal" data-target="#modal-secondary">Active</a>

                    <!-- <button type="button" data-id=<%= allblog[i]._id%> class="btn btn-block bg-gradient-success" data-toggle="modal" data-target="#modal-secondary">
                        Active
                      </button> -->
                  </td>
                  <% }else{ %> 
                    <td>
                    <a data-id=<%= allblog[i]._id%> class="btn bg-gradient-success save" data-toggle="modal" data-target="#modal-secondary">Inactive</a>

                      <!-- <button type="button" data-id=<%= allblog[i]._id%> class="btn btn-block bg-gradient-success btnsave" data-toggle="modal" data-target="#modal-secondary1">
                          Inactive
                        </button> -->
                    </td>
                    <% } %> 
                  <td>
                    <!-- <button type="button" class="btn btn-block bg-gradient-danger">Delete</button> -->
                    <a href="/blog-view?id=<%= allblog[i]._id%>" class="btn bg-gradient-secondary">View</a>
                    <a data-id=<%= allblog[i]._id%> class="btn bg-gradient-danger delete">Delete</a>


                  </td>

                </tr>
                <% } %>            
                </tbody>
                
              </table>
              <div class="modal fade" id="modal-secondary">
                <div class="modal-dialog">
                  <div class="modal-content bg-secondary">
                    <div class="modal-header">
                      <h4 class="modal-title">ARE YOU SURE?</h4>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <form method="" id="update_blog-status1" >
                      <p id="change-status">Do you want to make it Inactive?</p>
                    <div class="custom-control custom-radio custom-control-inline">
                <input type="hidden" value="" name="id" >
                <div class="custom-control custom-radio">
                  <input class="custom-control-input" type="radio" id="status1" name="blogStatus" value="1" >
                  <!-- </l>abel for="customRadio1" class="custom-control-label">Active</label> -->
                </div>
                <div class="custom-control custom-radio">
                  <input class="custom-control-input" type="radio" id="status0" name="blogStatus" value="0" >
                  <!-- <label for="customRadio2" class="custom-control-label">inactive</label> -->
                </div>
                  </div>
                    <div class="modal-footer justify-content-between">
                      <button type="button" class="btn btn-outline-light" data-dismiss="modal">No</button>
                      <button type="submit" class="btn btn-outline-light">Yes</button>
                    </div>
                  </form> 
                  </div>
                  <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
              </div>
            <!-- /.card-body -->
            <div class="modal fade" id="modal-secondary1">
              <div class="modal-dialog">
                <div class="modal-content bg-secondary">
                  <div class="modal-header">
                    <h4 class="modal-title">ARE YOU SURE?</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
